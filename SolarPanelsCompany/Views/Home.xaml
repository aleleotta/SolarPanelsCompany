<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarPanelsCompany.Views.Home"
             BackgroundColor="#29bfff">
    <StackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 60">
            <Label Text="Home" FontSize="45" FontFamily="Roboto" TextColor="Black"/>
            <Button x:Name="logoutButton" Text="Logout" BackgroundColor="#0000B5"
                TextColor="White" Margin="0, 5, 10, 0" HorizontalOptions="End" MaximumWidthRequest="100" Clicked="Button_Clicked"/>
        </HorizontalStackLayout>
        <StackLayout VerticalOptions="Center">
            <Border
                x:Name="border"
                MinimumHeightRequest="1000"
                MinimumWidthRequest="200"
                BackgroundColor="#0d0041"
                Stroke="Black"
                StrokeThickness="0.1"
                StrokeShape="RoundRectangle 20, 20, 0, 0"
                Padding="6">
                <StackLayout>
                    <Label Text="Appointments" HorizontalTextAlignment="Center" FontSize="24" FontAttributes="Bold" FontFamily="Roboto"/>
                    <HorizontalStackLayout></HorizontalStackLayout>
                </StackLayout>
            </Border>
        </StackLayout>
    </StackLayout>
</ContentPage>