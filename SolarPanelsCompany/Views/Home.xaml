<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarPanelsCompany.Views.Home"
             BackgroundColor="#29bfff">
    <StackLayout>
        <Label Text="Home" FontSize="45" FontFamily="Roboto" TextColor="Black" HorizontalTextAlignment="Center"/>
        <StackLayout VerticalOptions="Center" Margin="25">
            <Border
                MinimumHeightRequest="300"
                MinimumWidthRequest="300"
                MaximumHeightRequest="300"
                MaximumWidthRequest="300"
                BackgroundColor="#0d0041"
                Stroke="Black"
                StrokeThickness="0.1"
                StrokeShape="RoundRectangle 20, 20, 20, 20"
                Padding="0">
            </Border>
        </StackLayout>
    </StackLayout>
</ContentPage>