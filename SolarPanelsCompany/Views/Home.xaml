<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarPanelsCompany.Views.Home"
             BackgroundColor="#29bfff">
    <StackLayout>
        <Label Text="Home" FontSize="45" FontFamily="Roboto" TextColor="Black" HorizontalTextAlignment="Center"/>
        <StackLayout VerticalOptions="Center" Margin="25">
            <Button BindingContext="{x:Reference border}" x:Name="logoutButton" Text="Logout" BackgroundColor="#0000B5"
                    TextColor="White" Margin="0, 5, 25, 0" MaximumWidthRequest="100" HorizontalOptions="End" Clicked="Button_Clicked"/>
            <Border
                x:Name="border"
                MinimumHeightRequest="200"
                MinimumWidthRequest="200"
                MaximumWidthRequest="800"
                BackgroundColor="#0d0041"
                Stroke="Black"
                StrokeThickness="0.1"
                StrokeShape="RoundRectangle 20, 20, 20, 20"
                Margin="0, 5, 0, 0"
                Padding="6">
                <StackLayout>
                    <Label Text="Appointments" HorizontalTextAlignment="Center" FontSize="24" FontAttributes="Bold" FontFamily="Roboto"/>
                    <StackLayout WidthRequest="0"></StackLayout>
                </StackLayout>
            </Border>
        </StackLayout>
    </StackLayout>
</ContentPage>