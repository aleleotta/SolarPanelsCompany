<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SolarPanelsCompany.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SolarPanelsCompany.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login"
        />

    <ShellContent
        ContentTemplate="{DataTemplate local:Home}"
        Route="Home"
        />

    <ShellContent
        ContentTemplate="{DataTemplate local:Details}"
        Route="Details"
        />

</Shell>
